<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_paciente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form.activity_paciente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Datos personales"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Fecha de Nacimiento :"
                    android:textStyle="bold"/>

                <DatePicker
                    android:id="@+id/fechaNacimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Número telefónico:"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese su número telefónico"
                    android:inputType="phone"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Provincia:"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spnProvincias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/provincias"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Cantón:"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/canton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese su canton" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="El aislamiento domiliciliario fue indicado por::"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spnAislamiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/aislamiento"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Género:"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spnGenero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/generos"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/antecedentes"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="15dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="25dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="Antecedente Ginecológicos"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Está usted embarazada?"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnEmbarazada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/seleccion"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Está usted dando de lactar?"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnLactar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/seleccion"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="Factores de riesgo"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Sufre usted de Presión arterial alta?"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnPresion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/seleccion"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Sufre usted de Diabetes?"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnDiabetes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/seleccion"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Fue o es fumador?"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnFumador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/seleccion"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Le han diagnosticado de algún Cáncer?"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnCancer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/seleccion"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Tiene carnet de Discapacidad emitida por el MSP?"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnDiscapacidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/seleccion"
                    android:layout_marginTop="10dip"
                    android:prompt="@string/spn_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Le han diagnosticado alguna enfermedad?"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/enfermedad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese su enfermedad" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Tiene alguna alergia a medicamentos?"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/alergia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el medicamento" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="¿Cuantos familiares están bajo el cerco epidemiológico ?"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/cerco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el mumero de familiares"
                    android:inputType="number"/>

                <Button
                    android:id="@+id/guardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorBlanco"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>




</androidx.core.widget.NestedScrollView>