<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manage.camera.pre_camera"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/grafica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></com.jjoe64.graphview.GraphView>


        <com.jjoe64.graphview.GraphView
            android:id="@+id/graficaFourier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></com.jjoe64.graphview.GraphView>

        <ImageView
            android:id="@+id/img_ritmo_cardiaco"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/ritmo" />

        <TextView
            android:id="@+id/txt_parrafo_ritmo_cardiaco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:elegantTextHeight="true"
            android:text="@string/text_ritmos_cardiaco"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="normal"
            app:autoSizeTextType="uniform" />


    </LinearLayout>

    <Button
        android:id="@+id/btnIrTemperatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_tomar_pulsos"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:textColor="@color/colorBlanco"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView"
            style="@style/Widget.AppCompat.TextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"

            android:text="@string/text__titulo_pulso_cardiaco"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/ritmoCardiaco"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:text="@string/text_pulso_cardiaco"
            android:textSize="20sp"
            android:layout_weight="0.4"
            android:textColor="@color/colorBlack"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txtSaturacion"
            style="@style/Widget.AppCompat.TextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/text_tiutlo_saturacion"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/txtSaturacionProm"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:text="@string/text_temperatura"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtSaturacionRedondeo"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:text="@string/text_temperatura"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>




</LinearLayout>