<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manage.camera.pre_camera"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnIrTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/btn_tomar_pulsos"
        android:textSize="18sp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            style="@style/Widget.AppCompat.TextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:text="@string/text__titulo_pulso_cardiaco"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
             />
        <TextView
            android:id="@+id/ritmoCardiaco"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:text="@string/text_pulso_cardiaco"
            android:textSize="20sp"
            android:layout_weight="0.4"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            style="@style/Widget.AppCompat.TextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:text="@string/text_tiutlo_temperatura"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
            />
        <TextView
            android:id="@+id/textView4"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:text="@string/text_temperatura"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_weight="0.4"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.jjoe64.graphview.GraphView
            android:id="@+id/grafica"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            ></com.jjoe64.graphview.GraphView>


        <com.jjoe64.graphview.GraphView
            android:id="@+id/graficaFourier"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            ></com.jjoe64.graphview.GraphView>

    </LinearLayout>



</LinearLayout>